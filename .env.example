# Code Weaver Pro - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED
# =============================================================================

# Anthropic API Key (REQUIRED for all features)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# OPTIONAL - For Enhanced Features
# =============================================================================

# Hugging Face API Token (optional - for model fallbacks)
# Get yours at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_your_token_here

# PostHog API Key (optional - for analytics SDK suggestions in Audit Mode)
# Get yours at: https://posthog.com/
POSTHOG_API_KEY=phc_your_key_here

# =============================================================================
# OPTIONAL - Model Configuration
# =============================================================================

# Primary model to use (default: haiku for speed)
# Options: haiku, sonnet, opus
DEFAULT_MODEL=haiku

# Enable/disable specific frameworks (auto-detected if installed)
# These are optional - the system works with graceful fallbacks
ENABLE_LANGGRAPH=true
ENABLE_DSPY=true

# =============================================================================
# OPTIONAL - Testing & Development
# =============================================================================

# Test credentials for Playwright automation (in-memory only, not stored)
# Only used during audit mode for auth bypass
TEST_EMAIL=test@example.com
TEST_PASSWORD=test_password_123

# Enable debug mode (more verbose logging)
DEBUG=false

# =============================================================================
# OPTIONAL - Advanced Configuration
# =============================================================================

# Custom agent config path (default: agents.config.json)
# AGENT_CONFIG_PATH=./agents.config.json

# Maximum reflection iterations for LangGraph loops (default: 3)
# MAX_REFLECTION_ITERATIONS=3

# Quality threshold for reflection loops (default: 0.8)
# QUALITY_THRESHOLD=0.8

# Playwright timeout in seconds (default: 30)
# PLAYWRIGHT_TIMEOUT=30

# Maximum test-fix iterations (default: 10)
# MAX_TEST_FIX_ITERATIONS=10

# =============================================================================
# NOTES
# =============================================================================
# - Only ANTHROPIC_API_KEY is required
# - All other keys are optional with graceful fallbacks
# - Test credentials are used in-memory only for auth bypass in audit mode
# - Never commit .env to version control (it's in .gitignore)
