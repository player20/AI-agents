# Code Weaver Pro - Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Optional: Hugging Face API Token (for model fallbacks)
# HUGGINGFACE_API_TOKEN=your-hf-token-here

# Optional: Test Credentials (for automated testing/auditing)
# TEST_EMAIL=test@example.com
# TEST_PASSWORD=test-password-here

# Optional: Analytics Configuration (for suggestions)
# POSTHOG_API_KEY=your-posthog-key
# POSTHOG_HOST=https://app.posthog.com

# Optional: Model Configuration
# DEFAULT_MODEL=claude-3-haiku-20240307
# FALLBACK_MODEL=claude-3-sonnet-20240229

# Optional: Workflow Configuration
# MAX_RETRIES=3
# TIMEOUT_SECONDS=300

# Optional: Self-Improvement Mode
# ENABLE_FOREVER_MODE=false
# FOREVER_MODE_MAX_HOURS=4
# FOREVER_MODE_TARGET_SCORE=9.0
